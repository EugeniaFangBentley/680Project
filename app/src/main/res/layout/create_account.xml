<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Let's Get Started"
    android:gravity="center"
    android:textSize="30sp"
    android:fontFamily="casual"
    android:textStyle="bold"/>
    <!--   android:layout_margin="@dimen/fab_margin" !-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Just several simple steps"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="casual"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:background="@drawable/shape_create_acct"
        style="@style/createAccountEditText"/>
    <EditText
        android:id="@+id/pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:background="@drawable/shape_create_acct"
        style="@style/createAccountEditText"/>
    <EditText
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="User Name"
        android:background="@drawable/shape_create_acct"
        style="@style/createAccountEditText"/>
    <EditText
        android:id="@+id/town"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hometown"
        android:background="@drawable/shape_create_acct"
        style="@style/createAccountEditText"/>
    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone"
        android:background="@drawable/shape_create_acct"
        style="@style/createAccountEditText"/>
    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_submit_button"
        style="@style/createAccountButton"
        />
</LinearLayout>